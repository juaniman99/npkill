{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": false,
    "rootDir": "./src/",
    "outDir": "./lib/",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
